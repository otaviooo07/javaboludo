<body>
<h1 id="titulo">Carregando...</h1>
<ul id="lista"></ul>

<script>
// JSON embutido na página
const dados = {
"titulo": "Meus Filmes Favoritos",
"filmes": [
{"nome": "O Senhor dos Anéis", "genero": "Fantasia"},
{"nome": "Matrix", "genero": "Ficção Científica"},
{"nome": "Inception", "genero": "Ação e Suspense"}
]
};

// Exibir o título
document.getElementById('titulo').textContent = dados.titulo;

// Exibir a lista de filmes
const lista = document.getElementById('lista');
dados.filmes.forEach(filme => {
const item = document.createElement('li');
item.textContent = `${filme.nome} - Gênero: ${filme.genero}`;
lista.appendChild(item);
});
</script>
</body>
